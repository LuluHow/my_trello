{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tasks list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Project</th>
                <th>Owner</th>
                <th>Name</th>
                <th>Content</th>
                <th>Category</th>
                <th>Subtasks</th>
                <th>Orderr</th>
                <th>Color</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td><a href="{{ path('tasks_show', { 'id': task.id }) }}">{{ task.id }}</a></td>
                <td>{{ task.project }}</td>
                <td>{{ task.owner }}</td>
                <td>{{ task.name }}</td>
                <td>{{ task.content }}</td>
                <td>{{ task.category }}</td>
                <td>{{ task.subTasks }}</td>
                <td>{{ task.orderr }}</td>
                <td>{{ task.color }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tasks_show', { 'id': task.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tasks_edit', { 'id': task.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tasks_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
